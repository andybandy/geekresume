.navbar.navbar-fixed-top 
  .navbar-inner 
    .container
      %ul.nav
        %li
          = link_to "/" do
            = image_tag "/assets/brand.png"
      %ul.nav.pull-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{ data: { toggle: "dropdown" }, href: "/" }
              = current_user.username
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to "Профиль", destroy_user_session_path, method: :delete
              %li
                = link_to "SSH ключи", keys_path
              %li
                = link_to "Выйти", destroy_user_session_path, method: :delete
        - else
          %li
            = link_to "Войти", new_user_session_path, class: "btn-header"
            = link_to "Регистрация", new_user_registration_path, class: "btn-header"

