#box_sign
  .container
    .span12.box_wrapper
      .span12.box
        %div
          .head
            = content_tag :h4, "Регистрация"
          .form
            = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
              = error_messages!
              -# Исправть в css стили чтобы нормально отображался type=email
              -# И затем исправить text_fields на email_field
              = f.text_field :email, autofocus: true, placeholder: "Email"
              = f.password_field :password, placeholder: "Пароль"
              = f.password_field :password_confirmation, placeholder: "Подтверждение пароля"
              = f.submit "Зарегестрироваться", class: "btn"
      %p.already
        Уже зарегестрированы?
        = link_to "Войти", new_user_session_path



